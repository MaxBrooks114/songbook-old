<%= form_for [@user, @instrument] do |f| %>
<fieldset>

  <%= render partial: 'layouts/errors', locals: {object: @instrument} %>
  <%= f.hidden_field :user_id, :value => @user.id %>
  <%= f.label :name %>
  <br>
    <%= f.select :i_name, Instrument.instrument_list %></br>
  <%= f.label :make %>
  <br>
    <%= f.text_field :make %></br>
  <%= f.label :model %>
  <br>
    <%= f.text_field :model %></br>
  <%= f.label :family %><br>
  <%= f.select :family, ['Woodwind', 'Brass', 'String', 'Percussion', 'Other'] %><br>
  <%= f.label :range %><br>
  <%= f.select :range, ['Soprano', 'Alto', 'Tenor', 'Baritone', 'Bass', 'N/A'] %><br>
  <%= f.label :picture %>
  <%= f.hidden_field :picture, value: f.object.picture.signed_id if f.object.picture.attached? %>
  <%= f.file_field :picture %><br/>
  <% if @instrument.picture.attached? %>
    <%= f.label :delete_picture %>
    <%= f.check_box :delete_picture %><br/>
  <% end %>
</fieldset>
<%= f.submit @instrument.new_record? ? "Add Instrument" : "Update Instrument" %>
<% end %>