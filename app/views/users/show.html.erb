<h1><%= link_to @user.username.titleize, edit_user_path(@user) %>'s Songbook</h1>


<%=  link_to "Add an Instrument", new_user_instrument_path(@user) %><br />
<%=  link_to "Add a Song", new_user_song_path(@user) %><br />
<%=  link_to "Add an Element", new_user_element_path(@user) %><br />
<% if Instrument.any? && Song.any? && Element.any? %>
    <p>Favorite Instrument: <%= Element.favorite(:instrument).name_with_range %></p>
    <p>Favorite Song: <%= Element.favorite(:song).title %></p>
    <p>Elements Learned: <%= Element.learned_count %></p>
    <p>Songs Added: <%= Song.song_count %> </p>
    <p>Favorite Artist: <%= Song.favorite(:artist) %> </p>
    <p>Favorite Genre: <%= Song.favorite(:genre) %> </p>
    <p>Favorite Album: <%= Song.favorite(:album)%> </p>
    <p>Favorite Instrument Range: <%= Instrument.favorite(:range) %> </p>
    <p>Favorite Instrument Family: <%= Instrument.favorite(:family) %> </p>
    <p>Favorite Element: <%= Element.favorite(:name) %> </p>
    <p>Favorite key: <%= Element.favorite(:key)%> </p>
    <p>Fastest Tempo: <%= Element.fastest %> </p>

<% end %>
<br />
<br/>

</br/>
<%= button_to "Delete Account", user_path(@user), method: :delete, data: { confirm: 'Are you certain you want to delete your account? You will lose all of your music!' } %><br />
