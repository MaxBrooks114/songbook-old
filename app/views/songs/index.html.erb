<h1> Songs </h1>
<div>
  <h3>Filter posts:</h3>
  <%= form_tag("/songs", method: "get") do %>
    <%= select_tag "instruments", options_from_collection_for_select(Instrument.all, "id", "name"), include_blank: true %>
    <%= submit_tag "Filter" %>
  <% end %>
</div>
<%= render(@songs) %>
<%= link_to "Add a new song", new_song_path %>
